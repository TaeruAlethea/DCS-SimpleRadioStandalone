<Slider x:Class="Ciribob.DCS.SimpleRadio.Standalone.Client.UI.RadioChannelConfigUi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.UI"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.Properties"
        Name="RadioChannelConfig"
        d:DesignHeight="50"
        d:DesignWidth="200"
        mc:Ignorable="d" >
        <Slider.Style>
            <Style TargetType="{x:Type Slider}" BasedOn="{StaticResource MahApps.Styles.Slider}">
                <Setter Property="Maximum" Value="1.0" />
                <Setter Property="Minimum" Value="-1.0" />
                <Setter Property="TickPlacement" Value="BottomRight" />
                <Setter Property="SmallChange" Value="0.1" />
                <Setter Property="LargeChange" Value="0.3" />
                <Setter Property="IsSnapToTickEnabled" Value="True" />
                <Setter Property="TickFrequency" Value="0.1" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Slider}">
                            <StackPanel>
                                <Slider Value="{Binding Value, RelativeSource={RelativeSource TemplatedParent}}" 
                                        Maximum="1.0"
                                        Minimum="-1.0"
                                        TickPlacement="BottomRight"
                                        SmallChange="0.1" 
                                        LargeChange="0.3"
                                        IsSnapToTickEnabled="True"
                                        TickFrequency="0.1"/>
                                <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" FontSize="10" Content="{x:Static p:Resources.RadioChannelLeft}" HorizontalAlignment="Left" ></Label>
                                    <Label Grid.Column="1" FontSize="10" Content="{x:Static p:Resources.RadioChannelEqual}" HorizontalAlignment="Center" ></Label>
                                    <Label Grid.Column="2" FontSize="10" Content="{x:Static p:Resources.RadioChannelRight}" HorizontalAlignment="Right" ></Label>
                                </Grid>
                            </StackPanel>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Slider.Style>
</Slider>