<UserControl x:Class="Ciribob.DCS.SimpleRadio.Standalone.Client.UI.InputBindingControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.Settings"
			 xmlns:p="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.Properties"
             d:DesignHeight="100"
             d:DesignWidth="300"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance settings:InputSettingModel, IsDesignTimeCreatable=True}">
	<Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0">
	        <Label Content="{Binding Path=InputName, 
	               	        RelativeSource={RelativeSource FindAncestor, 
	               	        AncestorType={x:Type UserControl}}}" />
        </Label>
        <TextBox Grid.Row="0" Grid.Column="1"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 IsEnabled="False"
                 Text="{Binding Primary.DeviceName, Mode=OneWay}"/>
        <TextBox Grid.Row="0" Grid.Column="2"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 IsEnabled="False"
                 Text="{Binding Primary.Button, Mode=OneWay}" />
        <Button Grid.Row="0" Grid.Column="3"
                Click="PrimarySet_Click"
                Content="{x:Static p:Resources.DeviceSet}" />
        <Button Grid.Row="0" Grid.Column="4"
                Click="PrimaryClear_Click"
                Content="{x:Static p:Resources.DeviceClear}" />

        <StackPanel Grid.Row="1" Grid.Column="0" 
                    Orientation="Vertical"
                    VerticalAlignment="Center">
	        <StackPanel Orientation="Horizontal"
	                    HorizontalAlignment="Center"
	                    VerticalAlignment="Center">
		        <Label Content="{Binding Path=InputName, 
													RelativeSource={RelativeSource FindAncestor, 
													AncestorType={x:Type UserControl}}}" />
		        <Label Content="{x:Static p:Resources.InputModifier}" />
	        </StackPanel>
        </StackPanel>
        <TextBox Grid.Row="1" Grid.Column="1"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 IsEnabled="False"
                 Text="{Binding Modifier.DeviceName, Mode=OneWay}"/>
        <TextBox Grid.Row="1" Grid.Column="2"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 IsEnabled="False"
                 Text="{Binding Modifier.Button, Mode=OneWay}" />
        <Button Grid.Row="1" Grid.Column="3"
                Click="ModifierSet_Click"
                Content="{x:Static p:Resources.DeviceSet}" />
        <Button Grid.Row="1" Grid.Column="4"
                Click="ModifierClear_Click"
                Content="{x:Static p:Resources.DeviceClear}" />
    </Grid>
</UserControl>