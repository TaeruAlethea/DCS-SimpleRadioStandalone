<controls:MetroWindow x:Class="Ciribob.DCS.SimpleRadio.Standalone.Client.UI.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:clientWindow="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.UI.ClientWindow"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:local="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.UI"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:settings="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.Settings"
                      xmlns:converters="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.Utils.ValueConverters"
                      xmlns:viewModels="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.ViewModels"
                      xmlns:s="clr-namespace:System;assembly=mscorlib"
                  xmlns:p="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.Properties"
                      Title="{x:Static p:Resources.ClientWindowTitle}"
                      Width="550"
                      Height="710"
                      ResizeMode="CanMinimize"
                      mc:Ignorable="d" 
                      d:DesignHeight="*" d:DesignWidth="550"
                      d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel, IsDesignTimeCreatable=True}"
                      Left="{Binding SrsSettings.GlobalSettings.ClientX}"
                      Top="{Binding SrsSettings.GlobalSettings.ClientY}">
	
	<TabControl x:Name="TabControl">
        <TabControl.Resources>
            <converters:MicAvailabilityTooltipConverter x:Key="MicAvailabilityTooltipConverter" />
            <converters:BooleanInverterConverter x:Key="BooleanInverterConverter" />
        </TabControl.Resources>
        <TabItem Header="{x:Static p:Resources.GeneralTab}">
            <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="auto">
                <GroupBox x:Name="GroupBox"
                      Margin="5,0,5,0"
                      Header="{x:Static p:Resources.SetupHeader}" >
                <StackPanel Margin="0" 
                            Width="450">
                    <Label x:Name="MicLabel"
                           HorizontalAlignment="Center"
                           Content="{x:Static p:Resources.MicLabel}" />
                    <ComboBox x:Name="Mic"
                              Width="250"
                              HorizontalAlignment="Center"
                              ItemsSource="{Binding Path=AudioInput.InputAudioDevices}"
                              SelectedItem="{Binding Path=AudioInput.SelectedAudioInput, Mode=TwoWay}"
                              ToolTip="{Binding Path=AudioInput.MicrophoneAvailable, Converter={StaticResource MicAvailabilityTooltipConverter}}" />
                    <ProgressBar Name="MicVu"
                                 HorizontalAlignment="Center"
                                 Width="150"
                                 Height="20"
                                 Margin="5"
                                 Value="-96.6"
                                 Maximum="0"
                                 Minimum="-96.6"
                                 ToolTip="{Binding Path=AudioInput.MicrophoneAvailable, Converter={StaticResource MicAvailabilityTooltipConverter}}" />

                    <Button x:Name="Preview"
                            Margin="5"
                            HorizontalAlignment="Center"
                            Click="PreviewAudio"
                            Content="{x:Static p:Resources.PreviewAudio}"
                            ToolTipService.ShowOnDisabled="True"
                            IsEnabled="{Binding AudioInput.MicrophoneAvailable}"
                            ToolTip="{Binding Path=AudioInput.MicrophoneAvailable, Converter={StaticResource MicAvailabilityTooltipConverter}}" />

                    <Label x:Name="SpeakerLabel"
                           HorizontalAlignment="Center"
                           Content="{x:Static p:Resources.SpeakerLabel}" />
                    <UniformGrid Rows="1"
                                 HorizontalAlignment="Stretch"
                                 Margin="5">
                        <ComboBox x:Name="Speakers"
                                  HorizontalAlignment="Stretch"
                                  Margin="5"
                                  ItemsSource="{Binding Path=AudioOutput.OutputAudioDevices}"
                                  SelectedItem="{Binding Path=AudioOutput.SelectedAudioOutput, Mode=TwoWay}" />
                        <ComboBox x:Name="MicOutput"
                                  HorizontalAlignment="Stretch"
                                  Margin="5"
                                  ItemsSource="{Binding Path=AudioOutput.MicOutputAudioDevices}"
                                  SelectedItem="{Binding Path=AudioOutput.SelectedMicAudioOutput, Mode=TwoWay}" />
                    </UniformGrid>


                    <UniformGrid Margin="5"
                                HorizontalAlignment="Center"
                                Rows="1" >
                        <Slider x:Name="SpeakerBoost"
                                Width="150"
                                Margin="5"
                                VerticalContentAlignment="Center"
                                Maximum="1.0"
                                Minimum="0.0"
                                IsMoveToPointEnabled="true"
                                Value="{Binding Path=AudioManager.SpeakerBoost}" />
																<!-- TODO: Verify that NAudio is happy with a raw float like this. It seems to work, but may have quietly changed the functionality. -->
                        <ProgressBar Name="SpeakerVu"
                                     Width="150"
                                     Height="20"
                                     Margin="5"
                                     Value="-96.6"
                                     Maximum="0"
                                     Minimum="-96.6" />
                    </UniformGrid>

                    <StackPanel Margin="0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <Label HorizontalAlignment="Center" Content="{x:Static p:Resources.SpeakerBoost}" />

                        <Label x:Name="SpeakerBoostLabel"
                               HorizontalAlignment="Center"
                               Content="{x:Static p:Resources.SpeakerBoostLabel}" />
                    </StackPanel>

                    <Label HorizontalAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Content="{x:Static p:Resources.Server}" />

                    <UniformGrid Margin="5"
                                 HorizontalAlignment="Stretch"
                                 Rows="1" >
                        <TextBox x:Name="ServerIp"
                                 Margin="5"
                                 MaxLines="1"
                                 TextWrapping="Wrap"
                                 Text="{Binding ServerAddress.Address, Mode=OneWay}"/>

                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8*" />
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="ServerAddressPicker"
                                      Grid.Column="0"
                                      Margin="0,0,5,0"
                                      DisplayMemberPath="Name"
                                      ItemsSource="{Binding Path=FavouriteServersViewModel.Addresses}"
                                      SelectedItem="{Binding Path=ServerAddress}" />
                            <Button Grid.Column="1"
                                    Click="LaunchAddressTab"
                                    ToolTip="{x:Static p:Resources.ToolTipSavedAddressTab}" >
                                <Path
                                    Data="F1 M 0,13.44C 1.28003,12.69 1.92004,11.61 1.92004,10.2C 1.92004,8.94998 1.28003,7.94998 0,7.19998C 0.184998,6.56003 0.45752,5.92001 0.817505,5.28C 2.00751,5.50998 3.09753,5.12253 4.08752,4.11752C 4.95251,3.24252 5.19,2.14499 4.80005,0.824982C 5.45502,0.464996 6.09503,0.190033 6.72003,3.05176e-005C 7.55505,1.28 8.68005,1.92001 10.095,1.92001C 11.47,1.92001 12.585,1.28 13.44,3.05176e-005C 14.065,0.190033 14.705,0.464996 15.36,0.824982C 14.97,2.14499 15.2001,3.24252 16.05,4.11752C 17.04,5.12253 18.1376,5.50998 19.3425,5.28C 19.6525,5.86002 19.9401,6.50003 20.205,7.19998C 18.895,7.95499 18.24,8.95627 18.24,10.2038C 18.24,11.4513 18.895,12.4525 20.205,13.2075C 19.955,13.9025 19.6675,14.54 19.3425,15.12C 18.1525,14.77 17.0551,15.09 16.05,16.08C 15.185,17.005 14.955,18.0925 15.36,19.3425C 14.705,19.7025 14.065,19.9775 13.44,20.1675C 12.605,18.8825 11.49,18.24 10.095,18.24C 8.68005,18.24 7.55505,18.8825 6.72003,20.1675C 6.09503,19.9775 5.45502,19.7025 4.80005,19.3425C 5.19,18.0925 4.95251,17.01 4.08752,16.095C 3.22253,15.24 2.13251,14.995 0.817505,15.36C 0.45752,14.72 0.184998,14.08 0,13.44 Z M 6.97504,7.04251C 6.16504,7.89749 5.76001,8.94998 5.76001,10.2C 5.76001,11.45 6.16626,12.4625 6.97876,13.2375C 7.79126,14.0125 8.83374,14.4 10.1063,14.4C 11.3788,14.4 12.4125,14.0125 13.2075,13.2375C 14.0025,12.4625 14.4,11.45 14.4,10.2C 14.4,8.94998 14.0025,7.89749 13.2075,7.04251C 12.4125,6.18753 11.3788,5.75998 10.1063,5.75998C 8.83374,5.75998 7.79004,6.18753 6.97504,7.04251 Z "
                                    Fill="{DynamicResource MahApps.Brushes.Text}"
                                    Stretch="Uniform"
                                    UseLayoutRounding="False" />
                            </Button>
                        </Grid>
                    </UniformGrid>

                    <UniformGrid Margin="5"
                                 HorizontalAlignment="Center"
                                 Rows="1">
                        <Button x:Name="StartStop"
                                Width="140"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding ConnectCommand}"
                                Content="{x:Static p:Resources.StartStop}"
                                ToolTip="{Binding AudioInput.MicrophoneAvailable, Converter={StaticResource MicAvailabilityTooltipConverter}}" />
                        <Button x:Name="ToggleServerSettings"
                                Width="140"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Click="ToggleServerSettings_OnClick"
                                Content="{x:Static p:Resources.ToggleServerSettings}"
                                IsEnabled="False" />
                    </UniformGrid>
                    
                    <UniformGrid Margin="0"
                                HorizontalAlignment="Center"
                                Rows="1" >
                        <Button x:Name="ShowOverlay"
                                Margin="5"
                                HorizontalAlignment="Stretch"
                                Click="ShowOverlay_OnClick"
                                Content="{x:Static p:Resources.ShowOverlay}"
                                 />
                        <Button x:Name="ShowAwacsOverlay"
                                Margin="5"
                                HorizontalAlignment="Stretch"
                                Click="ShowAwacsOverlay_OnClick"
                                Content="{x:Static p:Resources.ShowAwacsOverlay}"
                                 />
                        <Button x:Name="ShowClientList"
                                Margin="5"
                                HorizontalAlignment="Stretch"
                                Click="ShowClientList_OnClick"
                                Content="{x:Static p:Resources.ShowClientList}"
                                 />
                    </UniformGrid>

                    <StackPanel Margin="0" Orientation="Horizontal" HorizontalAlignment="Right">
	                    <StackPanel.IsEnabled>
		                    <Binding Path="ClientState.ExternalAWACSModeConnected" 
		                             Converter="{StaticResource BooleanInverterConverter}" />
	                    </StackPanel.IsEnabled>
	                    <Label x:Name="PresetsFolderLabel" 
	                           Width="220" 
	                           HorizontalAlignment="Right"
	                           Margin="5"/>
                        <Button x:Name="PresetsFolderBrowseButton" 
                                Content="{x:Static p:Resources.PresetsFolderBrowseButton}" 
                                Click="PresetsFolderBrowseButton_Click" 
                                Margin="5" />
                        <Button x:Name="PresetsFolderResetButton" 
                                Content="{x:Static p:Resources.PresetsFolderResetButton}" 
                                Click="PresetsFolderResetButton_Click" 
                                Margin="5" />
                    </StackPanel>

                    <Expander x:Name="EamExpander" Header="{x:Static p:Resources.EAMExpanderHeader}" 
                              IsExpanded="True" 
                              HorizontalAlignment="Stretch"
                              Margin="5" >
                        <StackPanel Margin="0"
                                    Orientation="Vertical">
                            <StackPanel.Resources>
                                <converters:BooleanInverterConverter x:Key="BooleanInverterConverter" />
                            </StackPanel.Resources>
                            <StackPanel Margin="0"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal"
                                    IsEnabled="{Binding Path=ClientState.ExternalAWACSModeConnected, Converter={StaticResource BooleanInverterConverter}}">

                                <StackPanel Margin="0"
                                        HorizontalAlignment="Center"
                                        Orientation="Vertical">
                                    <Label x:Name="ExternalAwacsModePasswordLabel"
                                       HorizontalAlignment="Center"
                                       HorizontalContentAlignment="Center"
                                       Margin="0,10,10,0"
                                       Content="{x:Static p:Resources.ExternalAWACSModePasswordLabel}" />
                                    <PasswordBox x:Name="ExternalAwacsModePassword"
                                             Width="200"
                                             Height="23"
                                             Margin="0,0,10,0"
                                             HorizontalAlignment="Center"
                                             PasswordChanged="PasswordBox_PasswordChanged"/>
                                </StackPanel>
                                <StackPanel Margin="0"
                                        HorizontalAlignment="Center"
                                        Orientation="Vertical">
                                    <Label x:Name="ExternalAwacsModeNameLabel"
                                       HorizontalAlignment="Center"
                                       HorizontalContentAlignment="Center"
                                       Margin="0,10,0,0"
                                       Content="{x:Static p:Resources.ExternalAWACSModeNameLabel}" />
                                    <TextBox Width="200"
                                         Height="23"
                                         Margin="0,0,0,0"
                                         MaxLines="1"
                                         TextWrapping="Wrap"
                                         HorizontalAlignment="Center"
                                         Text="{Binding SrsSettings.GlobalSettings.LastSeenName}"/>
                                </StackPanel>

                            </StackPanel>
                            <StackPanel Margin="0"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                <Button x:Name="ConnectExternalAwacsMode"
                                        Margin="0,10,0,0"
                                        HorizontalAlignment="Center"
                                        Click="ConnectExternalAWACSMode_OnClick"
                                        Content="{x:Static p:Resources.ConnectExternalAWACSMode}"
                                        IsEnabled="False"
                                         />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,0">
                        <Label Content="{x:Static p:Resources.CurrentProfile}" />
                        <Label Name="CurrentProfile" Content="{x:Static p:Resources.CurrentProfileNone}" />
                        <Label Content="{x:Static p:Resources.CurrentUnitLabel}" />
                        <Label Content="{Binding ClientState.DcsPlayerRadioInfo.Unit}" />
                    </StackPanel>
                    <StackPanel Margin="0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <Label Content="{x:Static p:Resources.ConnectedClientsLabel}" />
                        <Label Content="{Binding Path=Clients.Total}" />
                        <Label Content="{x:Static p:Resources.CurrentPositionLabel}" />
                        <Label Content="{Binding ClientState.PlayerCoalitionLocationMetadata.LngLngPosition.PrettyPrint}" 
                               MouseLeftButtonUp="CurrentPosition_OnClick" />
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <Label HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Content="{x:Static p:Resources.ServerConnectionStatusLabel}" />
                        <Image IsEnabled="{Binding ClientState.IsConnected}"
                               Tag="{Binding ClientState.IsConnectionErrored}"
                               Style="{StaticResource ConnectionIconStyle}" />
	                      <Label HorizontalAlignment="Center" 
	                               VerticalAlignment="Center"
	                               Content="{x:Static p:Resources.VOIPConnectionStatusLabel}" />
                        <Image IsEnabled="{Binding ClientState.IsVoipConnected}"
                               Tag="{StaticResource FalseValue}"
                               Style="{StaticResource ConnectionIconStyle}" />
                        <Label HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               Content="{x:Static p:Resources.GameConnectionStatusLabel}" />
                        <Image IsEnabled="{Binding ClientState.IsGameConnected}"
                               Tag="{StaticResource FalseValue}"
                               Style="{StaticResource ConnectionIconStyle}" />
                        <Label HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               Content="{x:Static p:Resources.LotATCConnectionStatusLabel}" />
                        <Image IsEnabled="{Binding ClientState.IsLotATCConnected}"
                               Tag="{StaticResource FalseValue}"
                               Style="{StaticResource ConnectionIconStyle}"/>
                    </StackPanel>

                    <Button Content="{x:Static p:Resources.Donate_OnClick}"
                            Click="Donate_OnClick"
                            Margin="5" 
                            HorizontalAlignment="Center"
                            controls:ControlsHelper.ContentCharacterCasing="Normal" 
                            Foreground="{DynamicResource MahApps.Brushes.ThemeBackground}"
                            Background="{DynamicResource MahApps.Brushes.Accent}" />
                </StackPanel>
            </GroupBox>
            </ScrollViewer>
        </TabItem>

        <TabItem Header="{x:Static p:Resources.ControlsTab}">
            <GroupBox x:Name="ControlsGroupBox" Header="{x:Static p:Resources.ControlsHeader}">
                <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Visible">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch">
                        <Button Content="{x:Static p:Resources.RescanInputDevices}" 
                                Click="RescanInputDevices"
                                Margin="5" Width="200" />
                        <Grid >
	                        <Grid.ColumnDefinitions>
		                        <ColumnDefinition Width="2*" />
		                        <ColumnDefinition Width="2*" />
		                        <ColumnDefinition Width="1*" />
		                        <ColumnDefinition Width="1*" />
		                        <ColumnDefinition Width="1*" />
	                        </Grid.ColumnDefinitions>
	                        
	                        <Label Grid.Column="1" Content="{x:Static p:Resources.DeviceLabel}" />
	                        <Label Grid.Column="2" Content="{x:Static p:Resources.ButtonLabel}" />
                        </Grid>
                        <local:InputBindingControl2 InputName="Intercom"
                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputIntercom}"/>
                        <local:InputBindingControl2 InputName="Radio 1 Select"
                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputSwitch01}" />
                        <local:InputBindingControl2 InputName="Radio 2 Select"
                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputSwitch02}" />
                        <local:InputBindingControl2 InputName="Radio 3 Select"
                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputSwitch03}"/>
                        <local:InputBindingControl2 InputName="Intercom Select"
                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputIntercom}"/>
                        <local:InputBindingControl2 InputName="Push To Talk"
                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputPushToTalk}"/>
                        <local:InputBindingControl2 InputName="Radio Overlay Toggle"
                                                    DataContext="{Binding SrsSettings.CurrentProfile.OverlayToggle}"/>
                        <Expander Header="{x:Static p:Resources.ControlsHeaderSpecialFunctions}" 
                                  IsExpanded="False" >
	                        <StackPanel Orientation="Vertical"
	                                    HorizontalAlignment="Stretch"
	                                    VerticalAlignment="Stretch" >
		                        <local:InputBindingControl2 InputName="Special Intercom Select\PTT"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputIntercomPtt}"/>
		                        <local:InputBindingControl2 InputName="Toggle IDENT"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.TransponderIdent}"/>
		                        <local:InputBindingControl2 InputName="Toggle Guard"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.GuardToggle}"/>
		                        <local:InputBindingControl2 InputName="Toggle Encryption"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.EncryptionToggle}"/>
		                        <local:InputBindingControl2 InputName="Encryption Key Up"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.EncryptionKeyUp}"/>
		                        <local:InputBindingControl2 InputName="Encryption Key Down"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.EncryptionKeyDown}"/>
	                        </StackPanel>
                        </Expander>
                        
                        <Expander Header="{x:Static p:Resources.ControlsHeaderExpandedRadios}" 
                                  IsExpanded="False" >
	                        <StackPanel Orientation="Vertical"
	                                    HorizontalAlignment="Stretch"
	                                    VerticalAlignment="Stretch" >
	                        <local:InputBindingControl2 InputName="Radio 4"
	                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputSwitch04}"/>
	                        <local:InputBindingControl2 InputName="Radio 5"
	                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputSwitch05}"/>
	                        <local:InputBindingControl2 InputName="Radio 6"
	                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputSwitch06}"/>
	                        <local:InputBindingControl2 InputName="Radio 7"
	                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputSwitch07}"/>
	                        <local:InputBindingControl2 InputName="Radio 8"
	                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputSwitch08}"/>
	                        <local:InputBindingControl2 InputName="Radio 9"
	                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputSwitch09}"/>
	                        <local:InputBindingControl2 InputName="Radio 10"
	                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputSwitch10}"/>
	                        </StackPanel>
                        </Expander>
                        <Expander Header="{x:Static p:Resources.ControlsHeaderFreqencyControls}" 
                                  IsExpanded="False" >
	                        <StackPanel Orientation="Vertical"
	                                    HorizontalAlignment="Stretch"
	                                    VerticalAlignment="Stretch" >
		                        <local:InputBindingControl2 InputName="Up 100MHz"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputUp100}"/>
		                        <local:InputBindingControl2 InputName="Up 10MHz"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputUp10}"/>
		                        <local:InputBindingControl2 InputName="Up 1MHz"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputUp1}"/>
		                        <local:InputBindingControl2 InputName="Up 0.1MHz"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputUp01}"/>
		                        <local:InputBindingControl2 InputName="Up 0.01MHz"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputUp001}"/>
		                        <local:InputBindingControl2 InputName="Up 0.001MHz"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputUp0001}"/>
		                        <local:InputBindingControl2 InputName="Down 100MHz"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputDown100}"/>
		                        <local:InputBindingControl2 InputName="Down 10MHz"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputDown10}"/>
		                        <local:InputBindingControl2 InputName="Down 1MHz"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputDown1}"/>
		                        <local:InputBindingControl2 InputName="Down 0.1MHz"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputDown01}"/>
		                        <local:InputBindingControl2 InputName="Down 0.01MHz"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputDown001}"/>
		                        <local:InputBindingControl2 InputName="Down 0.001MHz"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.InputDown0001}"/>
	                        </StackPanel>
                        </Expander>
                        <Expander Header="{x:Static p:Resources.ControlsHeaderMiscellaneous}" 
                                  IsExpanded="False" >
	                        <StackPanel Orientation="Vertical"
	                                    HorizontalAlignment="Stretch"
	                                    VerticalAlignment="Stretch" >
		                        <local:InputBindingControl2 InputName="Channel Up"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.RadioChannelUp}"/>
		                        <local:InputBindingControl2 InputName="Channel Down"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.RadioChannelDown}"/>
		                        <local:InputBindingControl2 InputName="Volume Up"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.RadioVolumeUp}"/>
		                        <local:InputBindingControl2 InputName="Volume Down"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.RadioVolumeDown}"/>
		                        <local:InputBindingControl2 InputName="Select Next Radio"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.RadioNext}"/>
		                        <local:InputBindingControl2 InputName="Select Previous Radio"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.RadioPrevious}"/>
		                        <local:InputBindingControl2 InputName="Awacs Overlay Toggle"
		                                                    DataContext="{Binding SrsSettings.CurrentProfile.AwacsOverlayToggle}"/>
	                        </StackPanel>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>

            </GroupBox>

        </TabItem>

        <TabItem x:Name="FavouritesSeversTab" Header="{x:Static p:Resources.FavouritesSeversTab}">
            <GroupBox Header="{x:Static p:Resources.FavouritesSeversHeader}">
                <clientWindow:FavouriteServersView DataContext="{Binding Path=FavouriteServersViewModel}" />
            </GroupBox>
        </TabItem>

        <TabItem Header="{x:Static p:Resources.SettingsTab}">
	        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Visible">
                <StackPanel>
                    <GroupBox Header="{x:Static p:Resources.GlobalSettingsHeader}">
                        <StackPanel>
                            <GroupBox Header="{x:Static p:Resources.AutoConnectHeader}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="2*" />

                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />

                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Content="{x:Static p:Resources.AutoConnectEnabled}" />
                                    <ToggleButton Grid.Row="0" Grid.Column="1"
                                                  IsChecked="{Binding SrsSettings.GlobalSettings.AutoConnect}"/>

                                    <Label Grid.Row="1" Grid.Column="0"
                                           Content="{x:Static p:Resources.AutoConnectPrompt}" />
                                    <ToggleButton Grid.Row="1" Grid.Column="1"
                                                  IsChecked="{Binding SrsSettings.GlobalSettings.AutoConnectPrompt}"/>

                                    <Label Grid.Row="2" Grid.Column="0"
                                           Content="{x:Static p:Resources.AutoConnectMismatchPrompt}" />

                                    <ToggleButton Grid.Row="2" Grid.Column="1"
                                                  IsChecked="{Binding SrsSettings.GlobalSettings.AutoConnectMismatchPrompt}" />
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="{x:Static p:Resources.SRSInterfaceHeader}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="2*" />

                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />

                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Content="{x:Static p:Resources.ResetRadioOverlay}" />
                                    <Button Grid.Row="0" Grid.Column="1"
                                            Click="ResetRadioWindow_Click"
                                            Content="{x:Static p:Resources.Reset}" />

                                    <Label Grid.Row="1" Grid.Column="0"
                                           Content="{x:Static p:Resources.RadioOverlayTaskbarItem}" />
                                    <ToggleButton Grid.Row="1" Grid.Column="1"
                                                  Click="RadioOverlayTaskbarItem_Click"
                                                  IsChecked="{Binding SrsSettings.GlobalSettings.RadioOverlayTaskbarHide}"/>

                                    <Label Grid.Row="2" Grid.Column="0"
                                           Content="{x:Static p:Resources.RefocusDCS}" />
                                    <ToggleButton Grid.Row="2" Grid.Column="1"
                                                  IsChecked="{Binding SrsSettings.GlobalSettings.RefocusDcs}"/>

