<UserControl x:Class="Ciribob.DCS.SimpleRadio.Standalone.Client.UI.InputBindingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.UI"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.Settings"
			 xmlns:p="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.Properties"
             d:DesignHeight="100"
             d:DesignWidth="300"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance settings:InputBindingModel, IsDesignTimeCreatable=True}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
	    
        <Label x:Name="PrimaryDeviceLabel"
               Grid.Row="0" Grid.Column="0"
               VerticalContentAlignment="Center"
               Content="{x:Static p:Resources.DeviceControl}" />
        <TextBox Grid.Row="0" Grid.Column="1"
                 VerticalContentAlignment="Center"
                 IsEnabled="False"
                 Text="{Binding PrimaryDevice.DeviceName}"
                 MaxLength="30"
                 TextAlignment="Center" />
        <TextBox Grid.Row="0" Grid.Column="2"
                 VerticalContentAlignment="Center"
                 IsEnabled="False"
                 Text="{Binding PrimaryDevice.Button}"
                 MaxLength="5"
                 TextAlignment="Center" />
        <Button x:Name="PrimarySetButton"
                Grid.Row="0" Grid.Column="3"
                Click="PrimarySet_Click"
                Content="{x:Static p:Resources.DeviceSet}"
                Style="{DynamicResource SquareButtonStyle}" />
        <Button x:Name="PrimaryClearButton"
                Grid.Row="0" Grid.Column="4"
                Click="PrimaryClear_Click"
                Content="{x:Static p:Resources.DeviceClear}"
                Style="{DynamicResource SquareButtonStyle}" />

        <Label x:Name="ModifierDeviceLabel"
               Grid.Row="1" Grid.Column="0"
               VerticalContentAlignment="Center"
               Content="{x:Static p:Resources.DeviceControl}" />
        <TextBox Grid.Row="1" Grid.Column="1"
                 VerticalContentAlignment="Center"
                 IsEnabled="False"
                 Text="{Binding ModifierDevice.DeviceName}"
                 MaxLength="30"
                 TextAlignment="Center" />
        <TextBox Grid.Row="1" Grid.Column="2"
                 VerticalContentAlignment="Center"
                 IsEnabled="False"
                 Text="{Binding ModifierDevice.Button}"
                 MaxLength="5"
                 TextAlignment="Center" />
        <Button x:Name="ModifierSetButton"
                Grid.Row="1" Grid.Column="3"
                Click="ModifierSet_Click"
                Content="{x:Static p:Resources.DeviceSet}"
                Style="{DynamicResource SquareButtonStyle}" />
        <Button x:Name="ModifierClearButton"
                Grid.Row="1"
                Grid.Column="4"
                Click="ModifierClear_Click"
                Content="{x:Static p:Resources.DeviceClear}"
                Style="{DynamicResource SquareButtonStyle}" />

    </Grid>


</UserControl>